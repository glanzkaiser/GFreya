mkdir build &&
cd    build &&

cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
-DCMAKE_INSTALL_PREFIX=/opt/hamzstlib/Vtk9 \
-DVTK_BUILD_EXAMPLES=ON \
-DCMAKE_BUILD_SHARED_LIBS=ON \
-DCMAKE_BUILD_TYPE=Release \
-DVTK_ENABLE_WRAPPING=ON \
-DVTK_WRAP_JAVA=ON \
-DVTK_WRAP_PYTHON=ON \
-DVTK_USE_TK=ON \
-DVTK_WHEEL_BUILD=ON &&
ninja
